# Set default behavior to automatically normalize line endings
* text=auto

# Force batch scripts to use CRLF
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force bash scripts to use LF
*.sh text eol=lf
*.bash text eol=lf

# Python files should use LF
*.py text eol=lf
*.pyi text eol=lf
*.pyx text eol=lf

# Config files should use LF
*.ini text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
.pre-commit-config.yaml text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
